  "settings": {
    "login": {
      "name": "settings.login",
      "type": "text",
      "required": false
    },
    "api_key": {
      "name": "settings.api_key",
      "type": "text",
      "required": false
    },
    "account": {
      "name": "settings.account",
      "type": "text",
      "required": false
